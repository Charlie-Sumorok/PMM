{
	"name": "ppm",
	"productName": "PPM",
	"version": "0.1.0",
	"description": "A package manager for package managers",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Charlie-Sumorok/Visual_Web_Electron"
	},
	"homepage": "https://github.com/Charlie-Sumorok/Visual_Web#readme",
	"bugs": {
		"url": "https://github.com/Charlie-Sumorok/Visual_Web_Electron/issues"
	},
	"author": {
		"name": "Charlie-Sumorok"
	},
	"private": true,
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"server_test": "npm run start",
		"test_app": "npm start & sleep 5",
		"posttest_app": "killall node",
		"start": "electron ./scripts/js/index.js",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"typescript": "^4.1.5"
	},
	"devDependencies": {
		"@types/node": "^12.20.0",
		"electron": "^9.4.0",
		"electron-builder": "^21.2.0",
		"np": "^7.4.0",
		"xo": "^0.37.1"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.company.AppName",
		"mac": {
			"category": "public.app-category.graphics-design",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Animation"
		}
	}
}
